<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="j2store" method="upgrade">
    <name>Melli Payment</name>
    <version>1.1</version>
    <creationDate>2019</creationDate>
    <author>Almaatech</author>
    <authorEmail>info@almaatech.ir</authorEmail>
    <authorUrl>http://almaatech.ir</authorUrl>
    <copyright>2019 J2Store . All rights reserved. </copyright>
    <license>GNU General Public License v2 or later</license>
    <description>J2STORE_MELLI_PLUGINDESC</description>
    <scriptfile>script.payment_melli.php</scriptfile>
    <files>
        <filename plugin="payment_melli">payment_melli.php</filename>
        <filename>payment_melli.xml</filename>
        <filename>index.html</filename>
        <folder>payment_melli</folder>
    </files>

    <languages folder="language/fa-IR">
        <language tag="fa-IR">fa-IR.plg_j2store_payment_melli.ini</language>
        <language tag="fa-IR">fa-IR.plg_j2store_payment_melli.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="display_name" type="text" size="30" default="J2STORE_MELLI_MERCHANT_CODE_DEFAULT" label="J2STORE_MELLI_DISPLAY_NAME_LABEL" description="J2STORE_MELLI_DISPLAY_NAME_DESC"/>
                <field name="merchant_id" type="text" size="30" default="" lable="J2STORE_MELLI_MERCHANT_CODE_LABEL" description="J2STORE_MELLI_MERCHANT_CODE_DESC" />
                <field name="terminal_id" type="text" size="30" default="" lable="J2STORE_MELLI_TERMINAL_ID_LABEL" description="J2STORE_MELLI_TERMINAL_ID_DESC" />
                <field name="terminal_key" type="text" size="30" default="" lable="J2STORE_MELLI_TERMINAL_KEY_LABEL" description="J2STORE_MELLI_TERMINAL_KEY_DESC" />
                <field name="payment_status" type="list" default="1" label="J2STORE_MELLI_PAYMENT_STATUS_LABEL" description="J2STORE_MELLI_PAYMENT_STATUS_DESC">
                    <option value="1">J2STORE_CONFIRMED</option>
                    <option value="4">J2STORE_PENDING</option>
                    <option value="3">J2STORE_FAILED</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>